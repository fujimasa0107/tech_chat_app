<div class="new-wrapper">
  <div class="new-outer">
  <%= form_with model: @question, local: true do |form| %>
    <div class="new-contents-box">
      <div class="content-header"></div>
      <div class="content-box">
      <div class="text">
    <%= form.text_field :title, placeholder: "タイトル" %>
      </div>
      <div class="content">
    <%= form.text_area :content, placeholder: "質問内容" %>
      </div>
      <div class="text">
    <%= form.text_field :name, placeholder: "投稿者名" %>
      </div>
      <div class="send">
    <%= form.submit 'POST'%>
      </div>
    <% end %>
      </div>
    </div> 
  </div>
</div>